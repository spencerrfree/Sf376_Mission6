@{
    ViewData["Title"] = "Movie Entry Form";
}
@model Sf376_Mission6.Models.ApplicationResponse
<h1>@ViewData["Title"]</h1>

<p>Use this page to enter in movies into your database</p>

<div>
    <form method="post">

        <div asp-validation-summary="All"></div>
        @*create form labels and specify specific length or option requirements*@
        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId">
            <option value="">Select A Catergory</option>
            @foreach (Category c in ViewBag.Catergories)
            {
                <option value="@c.CatergoryId">@c.CatergoryName</option>
            }
        </select><br />

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" /><br />

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" /><br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" /><br />

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="">Select A Rating</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />

        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
        <br />

        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" /><br />

        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" maxlength="25" /><br />
        <input asp-for="id" type="hidden" />
        <button type="submit">Add Movie to Database</button>

    </form>

</div>